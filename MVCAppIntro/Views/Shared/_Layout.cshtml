
<!DOCTYPE html>

<!--Razor Template dilini kullanıyoruz. @@ değişkene bağlanmak için <php? /> <% %>-->

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
</head>
<body>

  


  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" asp-controller="Student" asp-action="Index">Öğrenci Listesi</a>
          </li>
          <li class="nav-item">

            <a class="nav-link" asp-controller="Student" asp-action="Create">Öğrenci Kayıt</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Teacher" asp-action="Index">Öğremen Listesi</a>
          </li>
          <li class="nav-item">

            <a class="nav-link" asp-controller="Teacher" asp-action="Create">Öğretmen Kayıt</a>
          </li>
          <li class="nav-item">

            <a class="nav-link" asp-controller="Course" asp-action="Index">Kurslar</a>
          </li>
          <li class="nav-item">

            <a class="nav-link" asp-controller="Course" asp-action="Create">Kurs Kayıt</a>
          </li>
        </ul>
      </div>

      <div class="float-end">


        <div class="dropstart">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        @if(User.Identity.IsAuthenticated)
            {
              <span> @User?.Identity?.Name</span>
            }
            else
            {
              <span>Misafir</span>
            }
          </button>
          <ul class="dropdown-menu">

            @if (User.Identity.IsAuthenticated)
            {
               <li><a class="dropdown-item" asp-controller="Account" asp-action="LogOut">Oturum Kapat</a></li>
            }
           else
            {
              <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Oturum Aç</a></li>
            }
          </ul>
         
        </div>
        

      </div>
    </div>
  </nav>




  <main class="mb-5">
    @RenderBody()
    <!-- Render Body method ile sayfadan sayfaya değişecek olan yeri işaretliyoruz. -->
  </main>

 
  <footer style="position:fixed;bottom:0; padding:5px; background-color:aquamarine;width:100%;border-top:1px solid black; text-align:center">
    Alt Bilgi
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>




</body>
</html>
