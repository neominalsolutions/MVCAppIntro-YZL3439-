@model List<Teacher>
<div class="container">

  <div class="row justify-content-end">
    <div class="col-2 mt-2 text-end">
      <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i>
        Yeni Kayıt
      </a>
    </div>

  </div>

  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th class="bg-black text-white">
          Ad Soyad
        </th>
        <th class="bg-black text-white">
          Sicil Numarası
        </th>
        <th class="bg-black text-white">
          Telefon Numarası
        </th>
        <th class="bg-black text-white">
          İşlemler
        </th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>@item.Name @item.SurName.ToUpper()</td>
          <td>@item.SicilNo</td>
          <td>@item.PhoneNumber</td>  
          <td>
            <a asp-controller="Teacher" asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Düzenle</a>
            &nbsp;
            <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
          </td>
        </tr>
      }
    </tbody>
  </table>

</div>



